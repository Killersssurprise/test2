    public static void dispose() {
        // Мы должны избавляться от текстур, когда заканчивает работать с объектом в котором есть текстуры
        texture_bg.dispose();
        texture_btn.dispose();
        texture_ha.dispose();
        texture_habtn.dispose();
        texture_p1.dispose();
        texture_p2.dispose();
        texture_p3.dispose();
        texture_p4.dispose();
        texture_p5.dispose();
        texture_p6.dispose();
        texture_p7.dispose();
        texture_p8.dispose();
        texture_p9.dispose();
        texture_p10.dispose();
        texture_p11.dispose();
        texture_e1.dispose();
        texture_e2.dispose();
        texture_e3.dispose();
        texture_e4.dispose();
        texture_e5.dispose();
        texture_e6.dispose();
        texture_e7.dispose();
        texture_e8.dispose();
        text.dispose();
        texture_single.dispose();
        texture_guy.dispose();
        texture_reload.dispose();
        texture_control.dispose();
        texture_fire.dispose();
        texture_bullet.dispose();
        texture_snip.dispose();
        soundFire1.dispose();
    }
